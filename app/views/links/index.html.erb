<p id="notice"><%= notice %></p>

<h1>Links</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Reg url</th>
      <th>Src name</th>
      <th>Pfm name</th>
      <th>Opt identifier</th>
      <th>Final URL</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @links.each do |link| %>
      <tr>
        <td><%= link.name %></td>
        <td><%= link.reg_url %></td>
        <td><%= link.src_name %></td>
        <td><%= link.pfm_name %></td>
        <td><%= link.opt_identifier %></td>
        <td><%= link.final_url(link.reg_url,link.src_name,link.pfm_name,link.opt_identifier) %></td>
        <td><%= link_to 'Show', link %></td>
        <td><%= link_to 'Edit', edit_link_path(link) %></td>
        <td><%= link_to 'Destroy', link, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Link', new_link_path %>

<%= link_to "CSV", links_path(format: "csv") %>
